{
	"extends": "@antfu/eslint-config-ts",
	"rules": {
		"no-tabs": "off",
		"semi": "off",
		"@typescript-eslint/semi": [
			"error",
			"always"
		],
		"quotes": "off",
		"@typescript-eslint/quotes": [
			"error",
			"double"
		],
		"@typescript-eslint/indent": "off",
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		]
	},
	"overrides": [
		{
			"files": [
				"*.json",
				"*.json5"
			],
			"rules": {
				"jsonc/indent": [
					"error",
					"tab"
				]
			}
		}
	]
}
